# Configuración de la Base de Datos MySQL
DB_HOST=your_mysql_host
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=your_mysql_database
DB_PORT=3306
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Configuración del Servidor
PORT=3001
NODE_ENV=development

# Configuración JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_aqui
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de Wompi (Pagos)
WOMPI_PUBLIC_KEY=pub_test_tu_public_key_aqui
WOMPI_PRIVATE_KEY=prv_test_tu_private_key_aqui
WOMPI_ENVIRONMENT=test
WOMPI_WEBHOOK_SECRET=tu_webhook_secret_aqui

# Configuración de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM=noreply@cafecolombiaapp.com

# Configuración de Archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Configuración de Seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de Cache (Redis - opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de 2FA
TWO_FACTOR_APP_NAME=Café Colombia Admin