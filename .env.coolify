# üöÄ CONFIGURACI√ìN PARA COOLIFY - CAF√â COLOMBIA APP
# ‚ö†Ô∏è  IMPORTANTE: Copiar estas variables en Coolify > Environment Variables

# ========================================
# CONFIGURACI√ìN DE ENTORNO
# ========================================
NODE_ENV=production

# ========================================
# CONFIGURACI√ìN DE BASE DE DATOS MYSQL
# ========================================
# ‚ö†Ô∏è  CAMBIAR POR TUS VALORES REALES DE COOLIFY
DB_HOST=tu-db-host-coolify
DB_PORT=3306
DB_USER=tu-db-user
DB_PASSWORD=tu-db-password-seguro
DB_NAME=cafe_colombia_app

# ========================================
# CONFIGURACI√ìN DEL SERVIDOR
# ========================================
PORT=3001
HOST=0.0.0.0

# ========================================
# CONFIGURACI√ìN JWT
# ========================================
# ‚ö†Ô∏è  GENERAR UN JWT_SECRET SEGURO (m√≠nimo 32 caracteres)
JWT_SECRET=tu-jwt-secret-muy-seguro-minimo-32-caracteres-aqui
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# URLs DE LA APLICACI√ìN - CONFIGURACI√ìN UNIFICADA
# ========================================
# Para servicio unificado en Coolify, usar rutas relativas
VITE_API_URL=/api
VITE_APP_URL=https://tu-dominio.com
FRONTEND_URL=https://tu-dominio.com
BACKEND_URL=https://tu-dominio.com/api

# ========================================
# CONFIGURACI√ìN DE CORS
# ========================================
# Para servicio unificado, permitir el mismo dominio
CORS_ORIGIN=https://tu-dominio.com
CORS_CREDENTIALS=true

# ========================================
# CONFIGURACI√ìN DE WOMPI (PAGOS)
# ========================================
# ‚ö†Ô∏è  CAMBIAR POR TUS CLAVES REALES DE WOMPI
WOMPI_PUBLIC_KEY=pub_prod_TU_CLAVE_PUBLICA_AQUI
WOMPI_PRIVATE_KEY=prv_prod_TU_CLAVE_PRIVADA_AQUI
WOMPI_ENVIRONMENT=production
WOMPI_WEBHOOK_SECRET=TU_WEBHOOK_SECRET_SEGURO_AQUI

# ========================================
# CONFIGURACI√ìN DE EMAIL
# ========================================
# ‚ö†Ô∏è  CONFIGURAR CON TU PROVEEDOR DE EMAIL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
EMAIL_FROM=noreply@tu-dominio.com

# ========================================
# CONFIGURACI√ìN DE SEGURIDAD
# ========================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900
SESSION_TIMEOUT=3600

# ========================================
# CONFIGURACI√ìN DE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACI√ìN DE ARCHIVOS
# ========================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ========================================
# CONFIGURACI√ìN DE LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# ========================================
# CONFIGURACI√ìN DE LA APLICACI√ìN
# ========================================
APP_NAME=Caf√© Colombia App
APP_VERSION=1.0.0
VITE_APP_NAME=Caf√© Colombia

# ========================================
# CONFIGURACI√ìN DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# CONFIGURACI√ìN DE MONITOREO
# ========================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ========================================
# CONFIGURACI√ìN DE NOTIFICACIONES
# ========================================
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_KEY=tu_push_notifications_key_aqui

# ========================================
# CONFIGURACI√ìN DE GEOLOCALIZACI√ìN
# ========================================
MAPS_API_KEY=tu_google_maps_api_key_aqui

# ========================================
# CONFIGURACI√ìN DE ANALYTICS (OPCIONAL)
# ========================================
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=tu_google_analytics_id_aqui

# ========================================
# CONFIGURACI√ìN DE SSL/TLS (COOLIFY LO MANEJA)
# ========================================
SSL_ENABLED=true

# ========================================
# CONFIGURACI√ìN DE REDIS (OPCIONAL)
# ========================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_redis_password_aqui

# ========================================
# CONFIGURACI√ìN DE CLUSTERING
# ========================================
CLUSTER_ENABLED=false
CLUSTER_WORKERS=1